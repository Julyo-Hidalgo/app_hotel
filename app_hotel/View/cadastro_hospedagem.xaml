<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_hotel.View.cadastro_hospedagem">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Aqua">

            <Picker x:Name="pck_suite" Title="Escolha a Suíte:" HorizontalOptions="FillAndExpand">
                <Picker.Items>
                    <x:String>Luxo</x:String>
                    <x:String>Executivo</x:String>
                    <x:String>Probre</x:String>
                </Picker.Items>
            </Picker>

            <Button x:Name="btn_calcular" Text="Calcular"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>